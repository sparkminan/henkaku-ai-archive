# Airtable Configuration (for server-side API)
AIRTABLE_API_KEY=your_api_key_here
AIRTABLE_BASE_ID=your_base_id_here
AIRTABLE_SESSIONS_TABLE_NAME=Sessions
AIRTABLE_MATERIALS_TABLE_NAME=Materials
AIRTABLE_TAGS_TABLE_NAME=Tags

# Public Environment Variables (for client-side)
# Note: These will be exposed to the browser, so only use them if necessary
# For most use cases, keep the Airtable API calls on the server side
NEXT_PUBLIC_AIRTABLE_BASE_ID=your_base_id_here
NEXT_PUBLIC_AIRTABLE_SESSIONS_TABLE_NAME=Sessions

# Enable Airtable integration
NEXT_PUBLIC_USE_AIRTABLE=true